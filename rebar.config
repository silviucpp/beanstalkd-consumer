{deps, [
    {erlpool, "1.4.4"},
    {ebeanstalkd, "3.0.0"}
]}.

{project_plugins, [rebar3_hex]}.

{erl_opts, [
    warnings_as_errors,
    warn_bif_clash,
    warn_obsolete_guard,
    warn_unused_import,
    warn_unused_record,
    warn_unused_vars,
    warn_unused_function,
    warn_shadow_vars,
    warn_export_vars,
    warn_export_all,
    warn_exported_vars,
    warn_deprecated_function,
    strict_validation
]}.
